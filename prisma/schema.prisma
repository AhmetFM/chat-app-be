generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String // hashed password
  name         String
  profileImage String?
  createdAt    DateTime @default(now())

  aboutMe String @default("Available")

  // Chat relations
  conversations1 Conversation[] @relation("User1Conversations")
  conversations2 Conversation[] @relation("User2Conversations")
  messages       Message[]

  // Friends
  sentFriendRequests     FriendRequest[] @relation("SentFriendRequests")
  receivedFriendRequests FriendRequest[] @relation("ReceivedFriendRequests")

  friendsA Friendship[] @relation("UserAFriends")
  friendsB Friendship[] @relation("UserBFriends")
}

model Conversation {
  id            String    @id @default(uuid())
  userAId       String
  userBId       String
  createdAt     DateTime  @default(now())
  lastMessage   String?
  lastMessageAt DateTime?

  userA User @relation("User1Conversations", fields: [userAId], references: [id])
  userB User @relation("User2Conversations", fields: [userBId], references: [id])

  messages Message[]

  @@unique([userAId, userBId])
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  senderId       String
  content        String
  createdAt      DateTime @default(now())
  isRead         Boolean  @default(false)

  conversation Conversation @relation(fields: [conversationId], references: [id])
  sender       User         @relation(fields: [senderId], references: [id])
}

//
// ------------------------------
// FRIENDSHIP SYSTEM
// ------------------------------
//

model FriendRequest {
  id         String              @id @default(uuid())
  senderId   String
  receiverId String
  status     FriendRequestStatus @default(PENDING)
  createdAt  DateTime            @default(now())

  sender   User @relation("SentFriendRequests", fields: [senderId], references: [id])
  receiver User @relation("ReceivedFriendRequests", fields: [receiverId], references: [id])

  // Bir istek bir kere olmalı
  @@unique([senderId, receiverId])
}

model Friendship {
  id        String   @id @default(uuid())
  userAId   String
  userBId   String
  createdAt DateTime @default(now())

  userA User @relation("UserAFriends", fields: [userAId], references: [id])
  userB User @relation("UserBFriends", fields: [userBId], references: [id])

  // Aynı iki kullanıcı iki kez arkadaş olamasın
  @@unique([userAId, userBId])
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}
